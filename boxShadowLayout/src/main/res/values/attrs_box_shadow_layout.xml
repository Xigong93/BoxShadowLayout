<resources>
    <declare-styleable name="BoxShadowLayout">
        <!-- box-shadow attributes-->
        <attr name="shadowVerticalOffset" format="dimension" />
        <attr name="shadowHorizontalOffset" format="dimension" />
        <attr name="shadowBlur" format="dimension" />
        <attr name="shadowSpread" format="dimension" />
        <attr name="shadowColor" format="color|reference" />
        <attr name="shadowInset" format="boolean" />
        <!-- extended attributes-->
        <attr name="boxRadius" format="dimension" />
        <attr name="boxRadiusTopLeft" format="dimension" />
        <attr name="boxRadiusTopRight" format="dimension" />
        <attr name="boxRadiusBottomLeft" format="dimension" />
        <attr name="boxRadiusBottomRight" format="dimension" />
    </declare-styleable>
</resources>
